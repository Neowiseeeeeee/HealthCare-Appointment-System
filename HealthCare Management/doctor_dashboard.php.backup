        const modal = document.getElementById('editProfileModal');
        const closeBtn = modal.querySelector('.close');
        const editProfileForm = document.getElementById('editProfileForm');
        const userDropdown = document.getElementById('userDropdown');
        const userDropdownMenu = document.getElementById('userDropdownMenu');

        // Dropdown functionality
        function toggleDropdown(event) {
            event.stopPropagation();
            userDropdownMenu.classList.toggle('show');
            userDropdown.classList.toggle('active');
        }

        function closeDropdown(event) {
            // Only close if clicking outside the dropdown
            if (!userDropdown.contains(event.target) && !userDropdownMenu.contains(event.target)) {
                userDropdownMenu.classList.remove('show');
                userDropdown.classList.remove('active');
            }
        }

        // When the user clicks Edit Profile link
        function openEditProfile(event) {
            event.preventDefault();
            modal.style.display = "block";
            userDropdownMenu.classList.remove('show');
        }

        // When the user clicks the close button
        closeBtn.onclick = function() {
            modal.style.display = "none";
        }

        // When the user clicks outside the modal
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        // Handle form submission
        editProfileForm.onsubmit = function(event) {
            event.preventDefault();
            
            const formData = new FormData(editProfileForm);
            
            fetch('processes/update_doctor_profile.php', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Profile updated successfully!');
                    modal.style.display = "none";
                    // Reload the page to show updated info
                    location.reload();
                } else {
                    alert('Error updating profile: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while updating the profile.');
            });
        };

